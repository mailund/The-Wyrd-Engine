% Bottom Image Command
\newcommand{\WyrdFooterImage}[1]{
    \thispagestyle{empty}
    \AddToShipoutPictureBG*{\AtPageLowerLeft{\includegraphics[width=\paperwidth]{#1}}}
}

% Top Image Command
\newlength{\WyrdHeaderHeight} % allocate a length variable
\newcommand{\WyrdHeaderImage}[1]{%
  \thispagestyle{empty}%
  \settoheight{\WyrdHeaderHeight}{\includegraphics[width=\paperwidth]{#1}}%
  \AddToShipoutPictureBG*{%
    \AtPageUpperLeft{%
      \raisebox{-\WyrdHeaderHeight}{\includegraphics[width=\paperwidth]{#1}}%
    }%
  }%
}


%% Plotting
\NewDocumentCommand{\Graph}{O{} m}{%
    \begin{center}
        \begin{tcolorbox}[
            colback=white!97,
            colframe=titlered,
            boxrule=0.8pt,
            arc=3mm,
            shadow=small,
            width=0.9\linewidth,
            fonttitle=\bfseries,
            coltitle=titlered,
            colbacktitle=bgtan,
            title=#1,
        ]
            % Plot the graphics
            \includegraphics[width=\textwidth]{#2}
        \end{tcolorbox}
    \end{center}
}
