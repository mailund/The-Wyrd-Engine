%% Environments
\newcommand{\InsertIfNonEmpty}[2]{%
    \ifx#1\empty 
      % Nothing
    \else
      #2
    \fi
}


\NewDocumentCommand{\BeginBoxPage}{}{%
  \end{multicols}%
  \clearpage
}

\NewDocumentCommand{\EndBoxPage}{}{%
  \clearpage
  \begin{multicols}{2}%
}

