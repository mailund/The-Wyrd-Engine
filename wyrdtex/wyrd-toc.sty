% \usepackage{titletoc} -- already loaded in dndbook

% Set TOC depth: show up to \section
\setcounter{tocdepth}{1}
%\contentsmargin{2.5em}

% ---- TOC Part Entry ----
\titlecontents{part}
  [0pt]
  {%
    \addvspace{.1in}%
    \DndFontTocPart
  }
  {\partname~\thecontentslabel:~}
  {}
  {}
  [%
    \addvspace{-.03in}%
    \titleline{\color{titlegold}\titlerule[1pt]}%
    \addvspace{.05in}%
  ]

% ---- TOC Chapter Entry ----
\titlecontents{chapter}
  [0pt]
  {%
    \addvspace{.1in}%
    \DndFontTocChapter
  }
  {\tocchapapp~\thecontentslabel:~}
  {}
  {\titlerule*[0.5em]{.}\DndFontTocSection\contentspage}  % ← DOTS + PAGE NUMBER

% ---- TOC Section Entry ----
\titlecontents{section}
  [0pt]
  {%
    \DndFontTocSection
  }
  {\thecontentslabel:~}
  {}
  {\titlerule*[0.5em]{.}\contentspage}  % ← DOTS + PAGE NUMBER